<% layout ("/layouts/boilerplate") %>
<row>
  <div class ="col-8 offset-2">
  <body>
    <div class="mt-3">
    <h3>Edit your Listing</h3>
    </div>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="mb-3">  
      <label for="form-label">Enter Title</label>
      <input name="listing[title]" 
      value="<%= listing.title %>" 
      type="text"  
      class="form-control"/>
      </div>

      <div class="mb-3">  
      <label for="form-label">Enter Description</label>
      <textarea name="listing[description]"
      class="form-control">
      <%= listing.description %>
      </textarea>
      </div>

      <div class="mb-3">  
      <label for="form-label">Enter Image URL</label>
      <input name="listing[image]"
       value="<%= listing.image %>"
       class="form-control" 
       type="text" />
      </div>

      <div class="mb-3"> 
      <label for="form-label">Enter Price</label> 
      <input name="listing[price]"
      value="<%= listing.price %>"
      class="form-control"
      type="number" />
      </div>

      <div class="row">
      <div class="mb-3 col-md-4">  
      <label for="form-label">Enter Country</label>
      <input
        name="listing[country]"
        value="<%= listing.country %>"
        class="form-control"
        type="text"/>
      </div>

      <div class="mb-3 col-md-8">  
      <label for="form-label">Enter Location</label>
      <input
        name="listing[location]"
        value="<%= listing.location %>"
        class="form-control"
        type="text"/>
      </div>
    </div>

      <button class="btn btn-dark edit-btn">Edit</button> 
    </form>
  </body>
</div>
</row>